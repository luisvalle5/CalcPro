        <div class="controls">
            <div class="input-wrapper">
                <i class="fas fa-calculator"></i>
                <select id="tipoCalculo" onchange="toggleGInput()">
                    <option value="area">1. Área</option>
                    <option value="arco">2. Longitud de Arco</option>
                    <option value="volumen">3. Volumen Rev.</option>
                    <option value="superficie">4. Sup. Revolución</option>
                </select>
            </div>

            <div class="input-wrapper">
                <i class="fas fa-wave-square"></i>
                <input type="text" id="funcF" class="math-input active-input" placeholder="f(x)" value="sqrt(x)" onfocus="setFocus('funcF')">
            </div>

            <div class="input-wrapper" id="groupG">
                <i class="fas fa-bezier-curve"></i>
                <input type="text" id="funcG" class="math-input" placeholder="g(x)" value="" onfocus="setFocus('funcG')">
            </div>

            <div class="keypad">
                <button class="key-btn" onclick="addText('x')">x</button>
                <button class="key-btn" onclick="addText('^')">^</button>
                <button class="key-btn" onclick="addText('^2')">x²</button>
                <button class="key-btn" onclick="addText('sqrt(')">√</button>
                
                <button class="key-btn" onclick="addText('sin(')">sin</button>
                <button class="key-btn" onclick="addText('cos(')">cos</button>
                <button class="key-btn" onclick="addText('tan(')">tan</button>
                <button class="key-btn" onclick="addText('pi')">π</button>

                <button class="key-btn" onclick="addText('(')">(</button>
                <button class="key-btn" onclick="addText(')')">)</button>
                <button class="key-btn" onclick="addText('log(')">ln</button>
                <button class="key-btn" onclick="addText('exp(')">eˣ</button>

                <button class="key-op key-btn" onclick="addText('+')">+</button>
                <button class="key-op key-btn" onclick="addText('-')">-</button>
                <button class="key-op key-btn" onclick="addText('*')">×</button>
                <button class="key-op key-btn" onclick="addText('/')">÷</button>
                
                <button class="key-btn key-del" onclick="delChar()"><i class="fas fa-backspace"></i></button>
                <button class="key-btn key-ac" style="grid-column: span 3; background: #991b1b;" onclick="clearInput()">BORRAR TODO</button>
            </div>

            <div style="display: grid; grid-template-columns: 1fr 1fr; gap:10px;">
                <div class="input-wrapper">
                    <i class="fas fa-step-forward"></i>
                    <input type="text" id="limA" value="0" placeholder="a">
                </div>
                <div class="input-wrapper">
                    <i class="fas fa-step-backward"></i>
                    <input type="text" id="limB" value="4" placeholder="b">
                </div>
            </div>

            <button class="btn-calc" onclick="calcular()">
                <i class="fas fa-play"></i> CALCULAR
            </button>

            <div id="resultCard" class="result-card">
                <div style="font-size:0.8rem; color:#ccc;">Resultado:</div>
                <div id="resVal" class="res-val">---</div>
                <div id="resPi" style="color:#4ade80; font-size:0.9rem;"></div>
            </div>
        </div>

        <div class="graph-panel">
            <div id="plot"></div>
        </div>
    </div>

    <script>
        // --- GESTIÓN DE INTERFAZ ---
        let activeInputId = 'funcF';
        function setFocus(id) {
            activeInputId = id;
            document.querySelectorAll('.math-input').forEach(el => el.classList.remove('active-input'));
            document.getElementById(id).classList.add('active-input');
        }
        function addText(txt) {
            const el = document.getElementById(activeInputId);
            const [start, end] = [el.selectionStart, el.selectionEnd];
            el.value = el.value.substring(0, start) + txt + el.value.substring(end);
            el.focus();
            el.selectionStart = el.selectionEnd = start + txt.length;
        }
        function delChar() {
            const el = document.getElementById(activeInputId);
            const start = el.selectionStart;
            if (start > 0) {
                el.value = el.value.substring(0, start - 1) + el.value.substring(start);
                el.focus();
                el.selectionStart = el.selectionEnd = start - 1;
            }
        }
        function clearInput() { document.getElementById(activeInputId).value = ""; document.getElementById(activeInputId).focus(); }
        
        function toggleGInput() {
            const tipo = document.getElementById('tipoCalculo').value;
            const gDiv = document.getElementById('groupG');
            if(tipo === 'area') {
                gDiv.style.display = 'block';
            } else {
                gDiv.style.display = 'none';
                if(activeInputId === 'funcG') setFocus('funcF');
            }
        }

        // --- MATEMÁTICAS ---
        function evaluar(expr, x) {
            try {
                // Filtros de seguridad para evitar números infinitos
                if (Math.abs(x) < 1e-9 && (expr.includes('1/x') || expr.includes('log'))) return NaN; 
                return math.evaluate(expr.toLowerCase(), { x: x, pi: Math.PI, e: Math.E });
            } catch { return NaN; }
        }

        function integrar(func, a, b, n = 800) {
            if (n % 2 !== 0) n++;
            const h = (b - a) / n;
            let sum = func(a) + func(b);
            if (!isFinite(sum)) sum = 0; // Protección contra NaN en límites

            for (let i = 1; i < n; i++) {
                let val = func(a + i * h);
                if (!isFinite(val)) val = 0; // Ignorar picos infinitos
                sum += ((i % 2 === 0) ? 2 : 4) * val;
            }
            return (sum * h) / 3;
        }

        function derivada(func, x) {
            const h = 1e-5;
            return (func(x + h) - func(x - h)) / (2 * h);
        }

        // --- CORE ---
        function calcular() {
            const strF = document.getElementById('funcF').value;
            const strG = document.getElementById('funcG').value;
            const tipo = document.getElementById('tipoCalculo').value;
            let a, b;

            try {
                a = math.evaluate(document.getElementById('limA').value.toLowerCase().replace('pi', Math.PI));
                b = math.evaluate(document.getElementById('limB').value.toLowerCase().replace('pi', Math.PI));
            } catch { alert("Límites inválidos"); return; }

            const f = (x) => evaluar(strF, x);
            const g = (strG && tipo === 'area') ? (x) => evaluar(strG, x) : (x) => 0;

            let resultado = 0, integrando;
            try {
                if (tipo === 'area') integrando = (x) => Math.abs(f(x) - g(x));
                else if (tipo === 'arco') integrando = (x) => Math.sqrt(1 + Math.pow(derivada(f, x), 2));
                else if (tipo === 'volumen') integrando = (x) => Math.PI * Math.pow(f(x), 2);
                else if (tipo === 'superficie') integrando = (x) => 2 * Math.PI * Math.abs(f(x)) * Math.sqrt(1 + Math.pow(derivada(f, x), 2));
                
                resultado = integrar(integrando, a, b);
            } catch { alert("Error matemático en la función"); return; }

            // Mostrar resultado
            document.getElementById('resVal').innerText = resultado.toFixed(4);
            const factor = resultado / Math.PI;
            const entero = Math.round(factor);
            if (Math.abs(factor - entero) < 0.001 && entero !== 0) {
                document.getElementById('resPi').innerText = entero === 1 ? "≈ π" : `≈ ${entero}π`;
            } else {
                document.getElementById('resPi').innerText = "";
            }
            document.getElementById('resultCard').classList.add('visible');

            graficar(strF, (tipo==='area' ? strG : null), a, b);
        }

        function graficar(strF, strG, a, b) {
            const margin = Math.abs(b - a) * 0.2 || 1; 
            const minX = Math.min(a, b) - margin;
            const maxX = Math.max(a, b) + margin;
            
            const xVals = [], yF = [], yG = [], xFill = [], yFillF = [], yFillG = [];
            const steps = 300; 
            
            // 1. Generar datos del gráfico (evitando infinitos)
            for (let i = 0; i <= steps; i++) {
                let x = minX + (i * (maxX - minX) / steps);
                xVals.push(x);
                let valF = evaluar(strF, x);
                let valG = strG ? evaluar(strG, x) : 0;
                
                // Limitar valores visuales para que no explote el gráfico (Clamping)
                if (Math.abs(valF) > 500) valF = NaN; 
                if (Math.abs(valG) > 500) valG = NaN;

                yF.push(valF);
                yG.push(valG);
            }

            // 2. Generar área sombreada (solo entre a y b)
            const fillSteps = 100;
            const start = Math.min(a, b), end = Math.max(a, b);
            for(let i=0; i<=fillSteps; i++){
                let x = start + (i * (end-start)/fillSteps);
                xFill.push(x);
                let vf = evaluar(strF, x);
                let vg = strG ? evaluar(strG, x) : 0;
                // Si es infinito, ponemos 0 para que no rompa el fill
                if (!isFinite(vf)) vf = 0; 
                if (!isFinite(vg)) vg = 0;
                yFillF.push(vf);
                yFillG.push(vg);
            }

            const data = [
                {
                    x: xFill.concat(xFill.slice().reverse()),
                    y: yFillF.concat(yFillG.slice().reverse()),
                    fill: 'toself',
                    fillcolor: 'rgba(56, 189, 248, 0.2)',
                    line: {width: 0},
                    name: 'Área',
                    hoverinfo: 'skip'
                },
                { x: xVals, y: yF, type: 'scatter', mode: 'lines', name: 'f(x)', line: {color: '#38bdf8', width: 3} }
            ];

            if(strG) {
                data.push({ x: xVals, y: yG, type: 'scatter', mode: 'lines', name: 'g(x)', line: {color: '#f472b6', dash: 'dot', width: 2} });
            }

            // 3. LAYOUT CORREGIDO (Automargins + Spacing)
            const layout = {
                paper_bgcolor: 'rgba(0,0,0,0)',
                plot_bgcolor: 'rgba(0,0,0,0)',
                font: { color: '#94a3b8' },
                margin: { t: 40, r: 20, l: 50, b: 40 }, // Márgenes base
                xaxis: { 
                    gridcolor: 'rgba(255,255,255,0.1)', 
                    title: 'Eje X',
                    automargin: true, // CLAVE: Evita que los números se corten
                    zerolinecolor: 'rgba(255,255,255,0.5)'
                },
                yaxis: { 
                    gridcolor: 'rgba(255,255,255,0.1)', 
                    title: 'Eje Y',
                    automargin: true, // CLAVE
                    zerolinecolor: 'rgba(255,255,255,0.5)'
                },
                showlegend: true,
                legend: { orientation: 'h', y: 1.1 },
                autosize: true 
            };
            
            const config = { responsive: true, displayModeBar: false };
            Plotly.newPlot('plot', data, layout, config);
        }

        // Init
        window.addEventListener('resize', () => { Plotly.Plots.resize('plot'); }); // Forzar ajuste al cambiar ventana
        toggleGInput();
        graficar('sqrt(x)', '', 0, 4);
    </script>
</body>
</html>
